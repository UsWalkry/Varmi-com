########################################
# Varmı Mail Server (.env.example)
# Kopyalayın: cp .env.example .env ve değerleri doldurun
########################################

# SMTP sunucu ayarları
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
# 465 için true (SMTPS/implicit TLS), 587/STARTTLS için genelde false
SMTP_SECURE=true
SMTP_USER=noreply@varmi.com
SMTP_PASS=your-smtp-password

# Gönderen bilgileri
MAIL_FROM_NAME=Varmı
MAIL_FROM_EMAIL=noreply@varmi.com

# İsteğe bağlı: frontend bu anahtarı "x-api-key" başlığında gönderirse doğrulanır
MAIL_API_KEY=change-this-key

# Sunucu portu/host
PORT=8787
HOST=0.0.0.0

# Geliştirme logları
DEBUG_MAIL=false
# SMTP settings (SMTP_* veya MAIL_* değişkenlerinden biri set edilebilir)
# Örnek: Kullanıcının verdiği formata uygun
MAIL_DRIVER=smtp
MAIL_HOST=mail.varmii.com
MAIL_PORT=465
MAIL_SECURE=ssl         # 465=ssl, 587=tls
MAIL_USER=noreply@varmii.com
MAIL_PASS=***ŞİFRENİZ***
MAIL_FROM_EMAIL=noreply@varmii.com
MAIL_FROM_NAME=varmii.com

# Alternatif isimlendirme (aynı ayarlar):
# SMTP_HOST=smtp.example.com # Ör: smtp.varmi.com veya sağlayıcınızın hostu
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=noreply@varmi.com
# SMTP_PASS=
# MAIL_FROM_NAME=Varmı
# MAIL_FROM_EMAIL=noreply@varmi.com
MAIL_API_KEY=change-this-key

# App server port
PORT=8787
